{
  "run_list" : [
    "recipe[apt]",
    "recipe[simple_iptables]",
    "recipe[iptables_basic]",

    "recipe[desktop]",

    "recipe[arm-linux]",

    "recipe[sudo]",
    "recipe[openssh]",
    "recipe[vim]",

    "recipe[user_base]",
    "recipe[user::data_bag]",
    "recipe[base]"
  ],

  "_comment_users_setting" : [ "readme file : ./cookbooks/user/README.md" ],
  "user" : {
    "manage_group" : "manage"
  },
  "users" : ["kitsunai"],

  "_comment_sudo_setting" : [ "readme file :  ./cookbooks/sudo/README.md"],
  "authorization" : {
    "sudo" : {
      "groups"       : ["admin", "wheel", "sysadmin"],
      "users"        : ["kitsunai"],
      "passwordless" : "true",
      "sudoers_defaults" : [
        "env_reset",
        "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\"",
        "env_keep=\"http_proxy https_proxy ftp_proxy no_proxy\""
        ]
    }
  },

  "_comment_openssh_setting" : [ "readme file : ./cookbooks/openssh/README.md"],
  "openssh" : {
    "client" : {
      "*" : {
        "send_env"                         : "LANG LC_*",
        "hash_known_hosts"                 : "yes",
        "g_s_s_a_p_i_authentication"       : "yes",
        "g_s_s_a_p_i_delegate_credentials" : "no"
      }
    },
    "server" : {
      "password_authentication"           : "yes",
      "compression"                       : "delayed",
      "port"                              : "22",
      "protocol"                          : "2",
      "host_key"                          : ["/etc/ssh/ssh_host_rsa_key", "/etc/ssh/ssh_host_dsa_key", "/etc/ssh/ssh_host_ecdsa_key"],
      "use_privilege_separation"          : "yes",
      "key_regeneration_interval"         : "3600",
      "server_key_bits"                   : "768",
      "syslog_facility"                   : "AUTH",
      "log_level"                         : "INFO",
      "login_grace_time"                  : "120",
      "permit_root_login"                 : "yes",
      "strict_modes"                      : "yes",
      "r_s_a_authentication"              : "yes",
      "pubkey_authentication"             : "yes",
      "ignore_rhosts"                     : "yes",
      "rhosts_r_s_a_authentication"       : "no",
      "hostbased_authentication"          : "no",
      "permit_empty_passwords"            : "no",
      "challenge_response_authentication" : "no",
      "x11_forwarding"                    : "yes",
      "x11_display_offset"                : "10",
      "x11_use_localhost"                 : "yes",
      "print_motd"                        : "no",
      "print_last_log"                    : "yes",
      "t_c_p_keep_alive"                  : "yes",
      "accept_env"                        : "LANG LC_*",
      "subsystem"                         : "sftp /usr/lib/openssh/sftp-server",
      "use_p_a_m"                         : "yes",
      "permit_root_login"                 : "no"
    }
  },

  "_comment_base_setting" : [ "readme file : ./site-cookbooks/base/README.md"],
  "base" : {
    "dotfilesrepo" : "master"
  },

  "_comment_vim_setting" : [ "readme file : ./cookbooks/vim/README.md" ],
  "vim" : {
    "extra_packages" : [
       "vim-nox",
       "vim-gnome",
       "vim-gtk"
    ],
    "source" : {
      "version" : "7.4",
      "dependencies" : [
        "gettext",
        "libncurses5-dev",
        "libacl1-dev",
        "libgpm-dev",
        "libxmu-dev",
        "libgnomeui-dev",
        "libxpm-dev",
        "libperl-dev",
        "python-dev",
        "python3-dev",
        "ruby-dev",
        "lua5.2",
        "liblua5.2-dev",
        "tcl-dev",
        "libluajit-5.1"
      ],
      "configuration" : [
        "--with-features=huge",
        "--enable-fail-if-missing",
        "--enable-perlinterp",
        "--enable-pythoninterp",
        "--enable-python3interp",
        "--enable-rubyinterp",
        "--enable-tclinterp",
        "--enable-luainterp",
        "--with-lua-prefix=/usr",
        "--enable-fontset",
        "--enable-multibyte",
        "--enable-gpm",
        "--enable-gui=gnome2",
        "--enable-xim",
        "--enable-cscope",
        "--with-x",
        "--disable-selinux",
        "--prefix=/usr/local"
      ]
    }
  }
}
