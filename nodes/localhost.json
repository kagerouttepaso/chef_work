{
  "run_list" : [
    //enable LWRP
    "recipe[simple_iptables]",  //to run serverbase
    //add users
    "recipe[user_base]",        //to run passowrd command  in user
    "recipe[user]",
    "recipe[user::data_bag]",
    //cook recipes
    "recipe[base]",
    "recipe[serverbase]",
    "recipe[sudo]",
    "recipe[openssh]"
    ],
    //sudo setting
    "authorization": {
      "sudo" : {
        //enable users
        "groups"       : ["admin", "wheel", "sysadmin"],
        "users"        : ["kitsunai"],
        //enable nopasswd
        "passwordless" : "true"
      }
    },
    //openssh setting
    "opensh": {
      "server": {
        "permit_root_login":"no",
        "password_authentication":"yes"
      }
    },
    //users
    "users": "kitsunai"
}
