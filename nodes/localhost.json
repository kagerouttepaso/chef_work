{
  //runlist
  "run_list" : [
    //enable iptables
    "recipe[simple_iptables]",  //to run serverbase
    "recipe[iptables_base]",    //to run serverbase
    //setup users
    "recipe[user_base]",        //to run passowrd command in recipe of user
    "recipe[user]",
    "recipe[user::data_bag]",
    //cook recipes
    "recipe[sudo]",
    "recipe[openssh]",
    "recipe[base]"
    ],

    //sudo setting
    //readme file :  ./cookbooks/sudo/README.md
    "authorization": {
      "sudo" : {
        //enable users
        "groups"       : ["admin", "wheel", "sysadmin"],
        "users"        : ["kitsunai"],
        //enable nopasswd
        "passwordless" : "true"
      }
    },

    //openssh setting
    //readme file : ./cookbooks/openssh/README.md
    "opensh": {
      "server": {
        "permit_root_login":"no",
        "password_authentication":"yes"
      }
    },

    //users setting
    //readme file : ./cookbooks/user/README.md
    "users": "kitsunai",

    // ./site-cookbooks/base/README.md
    "dotfiles" :{
      "repo" : "master"
    }
}
